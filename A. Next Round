https://codeforces.com/group/Hv4K04mXo4/contest/662062/problem/A
name:A. Next Round
#include <bits/stdc++.h>
using namespace std;

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n, k;
    cin >> n >> k;

    vector<int> a(n);
    for (int i = 0; i < n; i++)
        cin >> a[i];

    int limit = a[k - 1];
    int c = 0;

    for (int i = 0; i < n; i++)
    {
        if (a[i] >= limit && a[i] > 0)
            c++;
    }

    cout << c;
    return 0;
}
